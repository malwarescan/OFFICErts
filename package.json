{
  "name": "office-rts",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier -w .",
    "seed:dev": "pnpm -C apps/api seed:dev",
    "test:smoke": "pnpm -C test tsx smoke.ts",
    "start": "echo 'This is a monorepo. Please deploy individual services: API, Realtime, Web, or Worker' && exit 1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "prettier": "^3.2.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  }
}
